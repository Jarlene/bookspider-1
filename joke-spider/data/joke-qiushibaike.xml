<?xml version="1.0" encoding="utf-8"?>
<xml>
    <xsl:for-each select="//div[class='main']/div/div/div">
      <joke>
      	<id>
      	  <xsl:attr-of select="div[class='bar']" attr='id' />
      	</id>
      	<icon>
      	  <xsl:attr-of select="div[class='author']/img" attr='src' />
      	</icon>
  	    <author>
          <xsl:value-of select="div[class='author']/a" />
        </author>
        <datetime>
          <xsl:attr-of select="div[class='content']" attr='title' />
        </datetime>
        <content>
          <xsl:value-of select="div[class='content']" />
        </content>
        <image>
        	<xsl:attr-of select="div[class='thumb']/a/img" attr='src' />
        </image>
        <approve>
        	<xsl:value-of select="div[class='bar']/ul/li/a" />
        </approve>
        <disapprove>
        	<xsl:value-of select="div[class='bar']/ul/li[2]/a" />
        </disapprove>
        <comment>
        	<xsl:value-of select="div[class='bar']/ul/li[3]/a" />
        </comment>
      </joke>
    </xsl:for-each>
</xml>
