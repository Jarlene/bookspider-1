<?xml version="1.0" encoding="gb2312"?>
<book>
  <books>
    <xsl:for-each select="/html/body/div[11]/div/ul/li">
      <book>
        <name>
          <xsl:attr-of select="a" attr='title' />
        </name>
        <author>
          <xsl:value-of select="div[2]/a" />
        </author>
        <uri>
          <xsl:attr-of select="a" attr='href' />
        </uri>
        <chapter>
           <xsl:value-of select="em/a" />
        </chapter> 
        <datetime>
          <xsl:attr-of select="em/a" attr='title' />
        </datetime>
      </book>
    </xsl:for-each>
  </books>
</book>
